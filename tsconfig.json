{
    "compilerOptions": {
      "module": "ESNext",                    // Use ES Module syntax
      "target": "ESNext",                    // Use modern JavaScript
      "moduleResolution": "Node",            // Resolve modules like Node.js
      "esModuleInterop": true,               // Enable default import compatibility
      "allowSyntheticDefaultImports": true,  // Allow default imports
      "outDir": "./dist",                    // Output compiled JS files to dist folder
      "rootDir": "./src",                    // TypeScript source files are in src
      "strict": true,                        // Enable strict type-checking options
      "skipLibCheck": true                   // Skip type checking for declaration files
    },
    "include": ["src/**/*"],                // Include all TypeScript files in src/
    "exclude": ["node_modules"]             // Exclude node_modules directory
  }
  